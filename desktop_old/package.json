{
  "name": "wpp-manager",
  "version": "1.0.0",
  "description": "WhatsApp Multi-Account Manager",
  "main": "dist/electron/main/main.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "build:win": "pnpm run build && electron-builder --win",
    "build:mac": "pnpm run build && electron-builder --mac",
    "build:mac:arm": "pnpm run build && electron-builder --mac --arm64",
    "build:mac:x64": "pnpm run build && electron-builder --mac --x64",
    "build:mac:universal": "pnpm run build && electron-builder --mac --universal",
    "build:linux": "pnpm run build && electron-builder --linux",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report"
  },
  "keywords": [
    "electron",
    "whatsapp",
    "wppconnect"
